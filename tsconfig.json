{
    "compilerOptions": {
        "incremental": true,
        "target": "es2019",
        "module": "commonjs",
        "declaration": true,
        "sourceMap": true,
        "composite": true,
        "strict": true,
        "strictNullChecks": false,
        "noUnusedLocals": true,
        "moduleResolution": "node",
        "esModuleInterop": true,
        "skipLibCheck": true,
        "forceConsistentCasingInFileNames": true,
        "outDir": "./build",
    },
    "include": ["src", "app.ts"],
    "exclude": ["node_modules"]
}